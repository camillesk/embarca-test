<p id="notice"><%= notice %></p>

<div class="card w-50 mx-auto mt-5">
  <div class="card-header">
    <h1>States</h1>
    <div class="d-flex justify-content-end">
      <%= link_to 'New State', new_state_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Population</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @states.each do |state| %>
          <tr>
            <td><%= state.name %></td>
            <td><%= number_with_delimiter(state.population, delimiter: ".") %></td>
            <td><%= link_to 'Show', state, class: "btn btn-secondary" %></td>
            <td><%= link_to 'Edit', edit_state_path(state), class: "btn btn-secondary" %></td>
            <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
