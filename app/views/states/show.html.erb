<p id="notice"><%= notice %></p>

<div class="card w-25 mx-auto mt-5">
  <div class="card-body">
    <p>
      <strong>Name:</strong>
      <%= @state.name %>
    </p>

    <p>
      <strong>Population:</strong>
      <%= @state.population %>
    </p>
  </div>
  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Back', states_path, class: "btn btn-secondary mr-3" %>
    <%= link_to 'Edit', edit_state_path(@state), class: "btn btn-warning" %>
  </div>
</div>
